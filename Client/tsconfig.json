{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "allowJs": true,
    "isolatedModules": true,
    "strict": true,
    "target": "ES2020",
    "moduleResolution": "bundler",
    "customConditions": [
      "import",
      "require",
      "node"
    ],
    "types": [
      "expo-router"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
